# ==============================================
# Lumière — Environment Variables
# ==============================================
# Copy this file to .env.local for local dev
# For Coolify: set these in the Coolify dashboard
# ==============================================

# ---------- Database (auto-configured in Docker) ----------
DATABASE_URL="postgresql://lumiere:lumiere_prod_password@postgres:5432/lumiere_db"

# ---------- PostgreSQL container ----------
POSTGRES_USER="lumiere"
POSTGRES_PASSWORD="lumiere_prod_password"
POSTGRES_DB="lumiere_db"

# ---------- NextAuth ----------
AUTH_SECRET="generate-with: openssl rand -base64 32"
AUTH_URL="https://your-domain.com"
NEXTAUTH_URL="https://your-domain.com"

# ---------- Redis (auto-configured in Docker) ----------
REDIS_URL="redis://redis:6379"

# ---------- Email (Resend) ----------
RESEND_API_KEY=""
RESEND_FROM_EMAIL="noreply@lumiere.film"

# ---------- AI (Anthropic Claude) ----------
ANTHROPIC_API_KEY=""

# ---------- Payments (Stripe) ----------
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# ---------- Storage (S3 / Hetzner Object Storage) ----------
S3_ENDPOINT=""
S3_ACCESS_KEY=""
S3_SECRET_KEY=""
S3_BUCKET="lumiere-uploads"
S3_REGION="eu-central-1"

# ---------- App ----------
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NEXT_PUBLIC_APP_NAME="Lumière"
APP_PORT="3000"

# ---------- Deploy ----------
# Set to "true" on first deploy to seed the database with test data
SEED_DB="false"
